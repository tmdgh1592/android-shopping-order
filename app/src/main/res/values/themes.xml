<resources>
    <!-- Base application theme. -->
    <style name="Theme.Shopping" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="PointEditTextStyle">@style/PointEditTextStyle</item>
    </style>

    <style name="PointEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/shape_woowa_point_edit_text</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">10</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:textColor">@color/woowa_text_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:hint">0Ïõê</item>
    </style>
</resources>
