<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="availablePoint"
            type="woowacourse.shopping.model.Point" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/use_point_icon_image_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/use_point_icon_desc"
            android:src="@drawable/icon_point"
            app:layout_constraintBottom_toBottomOf="@+id/use_point_title_text_view"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/use_point_title_text_view" />

        <TextView
            android:id="@+id/use_point_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:includeFontPadding="false"
            android:text="@string/use_point"
            android:textColor="@color/woowa_text_black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/use_point_icon_image_view"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/point_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/shape_woowa_point_edit_text"
            android:gravity="end|center_vertical"
            android:hint="@{@string/point_format(availablePoint.value)}"
            android:inputType="numberDecimal"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp"
            android:textColor="@color/woowa_text_black"
            app:layout_constraintEnd_toStartOf="@+id/point_apply_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/use_point_icon_image_view"
            tools:hint="2,153원" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/point_apply_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:backgroundTint="@color/woowa_emerald"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/apply_point"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/point_edit_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/point_edit_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
